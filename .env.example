# Environment Variables Configuration

# =========================================
# REQUIRED - Server will not start without these
# =========================================

# JWT Secret Key - MUST be a strong random string (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# Database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/excalidraw?schema=public

# =========================================
# OPTIONAL - Defaults provided
# =========================================

# JWT token expiry (default: 7d)
JWT_EXPIRY=7d

# Bcrypt salt rounds for password hashing (default: 12)
BCRYPT_ROUNDS=12

# =========================================
# BACKEND CONFIGURATION
# =========================================

# HTTP Backend port (default: 3001)
PORT=3001

# Frontend URL for CORS (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# =========================================
# FRONTEND CONFIGURATION (Next.js)
# =========================================

# Backend API URL
NEXT_PUBLIC_HTTP_BACKEND=http://localhost:3001

# WebSocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:8080
